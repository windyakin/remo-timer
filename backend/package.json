{
  "name": "backend",
  "version": "1.0.0",
  "description": "Nature Remote Timer Backend API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typeorm": "typeorm-ts-node-commonjs",
    "typeorm:js": "typeorm",
    "migration:generate": "npm run typeorm -- migration:generate -d src/config/database.ts",
    "migration:run": "npm run typeorm -- migration:run -d src/config/database.ts",
    "migration:run:js": "npm run typeorm:js -- migration:run -d dist/config/database.js",
    "migration:revert": "npm run typeorm -- migration:revert -d src/config/database.ts",
    "migration:revert:js": "npm run typeorm:js -- migration:revert -d dist/config/database.js"
  },
  "dependencies": {
    "better-sqlite3": "^11.0.0",
    "connect-sqlite3": "^0.9.16",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csrf-csrf": "^4.0.3",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "express-oauth2-jwt-bearer": "^1.7.3",
    "express-openid-connect": "^2.19.4",
    "express-session": "^1.19.0",
    "morgan": "^1.10.1",
    "node-cron": "^3.0.3",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.2",
    "@types/morgan": "^1.9.10",
    "@types/node": "^22.7.0",
    "@types/node-cron": "^3.0.11",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2"
  }
}
