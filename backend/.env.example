# Nature API
NATURE_API_TOKEN=your-nature-api-token

# Database
SQLITE_PATH=/data/database.sqlite
DB_LOGGING=false

# Backend
PORT=3000
NODE_ENV=development

# Auth0 Configuration (BFF Pattern)
# 認証を有効にする場合は true に設定
AUTH_ENABLED=false
AUTH0_ISSUER_URL=https://your-tenant.auth0.com/
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret

# Session Configuration
SESSION_SECRET=random-32-character-string-here

# Application URL (used for Auth0 callback)
BASE_URL=http://localhost:5173
